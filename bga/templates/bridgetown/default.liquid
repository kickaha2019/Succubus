<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: resource.data.title, relative_url: resource.relative_url %}
  </head>
  <body class="{{ resource.data.layout }} {{ resource.data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main>
      {{ content }}
    </main>

    {% render "footer", url: site.url, metadata: site.metadata %}
  </body>
</html>
