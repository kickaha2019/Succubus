<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head" relative_url: resource.relative_url %}
  </head>
  <body class="{{ resource.data.layout }} {{ resource.data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main>
        <div class="small_width">
          <table>
          {% for section in resource.section_index %}
            <tr><td><a href="sections/{{ section.key }}/index.html">{{ section.name }}</a></td></tr>
          {% endfor %}
          </table>
        </div>

        <div class="big_width">
        {{ content }}
        </div>

        <div class="medium_width">
          <h2>Recent posts</h2>
          
          {% for post in paginator.resources %}
            <article>
              <a href="{{ post.relative_url }}">{{ post.data.title }}</a>

              <p>{{ post.data.description }}</p>
            </article>
          {% endfor %}
          
          <a class="black" href="index-posts">All posts</a>
        </div>
    </main>

    {% render "footer" %}
  </body>
</html>
