<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head" %}
  </head>
  <body class="{{ resource.data.layout }} {{ resource.data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main>
        <div class="medium_width">
          {% for article in collections[resource.section].resources %}
            <article>
              <a href="{{ post.relative_url }}">{{ post.data.title }}</a>

              <p>{{ post.data.description }}</p>
            </article>
          {% endfor %}
        </div>
        
        <div class="medium_width">
          <h2>Recent posts</h2>
          
          {% for post in paginator.resources %}
            <article>
              <a href="{{ post.relative_url }}">{{ post.data.title }}</a>

              <p>{{ post.data.description }}</p>
            </article>
          {% endfor %}
          
          <a href="section-{{ section }}-posts">All posts</a>
        </div>
    </main>

    {% render "footer" %}
  </body>
</html>
